{
    "compilerOptions": {
      "baseUrl": ".",
      "rootDir": "./src/",
      "outDir": "dist/tsc/",
      "noEmitOnError": true,
      "sourceMap": true,
      "jsx": "react",
      "lib": ["es2016", "dom"],
      "module": "commonjs",
      "target": "es6",
      "types": [
        "mendix-client",
        "core-js"
      ],
      "moduleResolution": "node",
      "declaration": false,
      "removeComments": true,
      "noLib": false,
      "watch": false,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "strict": true,
      "strictPropertyInitialization": false,
      "strictFunctionTypes": false,
      "skipLibCheck": false
    },
    "exclude": [
      "dist/",
      "node_modules/"
    ]
  }